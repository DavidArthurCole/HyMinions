extends ../layouts/default

block append js
    script(src="/js/eventsData.js")
    script(src="/js/events.js")
    	
block append variables
    - var currentPage = "events";
    - var numberOfEvents = 10;
    - var numberOfMajorEvents = 4;
    

block meta
    meta(name="description" content="Events timer for Spooky Festival, Season of Jerry etc.")

block content
    .container
        h1.d-inline-block Events <img src="/images/events.png" width="40" height="40"/>
        p.d-inline-block &nbsp; &nbsp; &nbsp;
        +infoBox("eventsTitleModal","info","Events Timer")
            p This is the page that shows the time remaining to regular SkyBlock events.
            p Live events are shown in yellow. The large countdown timers show the time left until the next events/ time left until the events end. The bracketed dates and times show when the events start/end according to your local time zone.
            p If the time displayed is wrong, probably due to DST, calibrate your time by click on the "Wrong time displayed?" button.
        
        br
        a(data-toggle="collapse" href="#collapseManualTime" aria-expanded="false" aria-controls="collapseManualTime").read-more Wrong time displayed?
        #collapseManualTime.collapse
            br
            h2 Calibration
            p The time may be inaccurate due to daylight saving time or timezone issues. You may calibrate the time here.
            p Add  &nbsp; <input id="manualTime" class="form-control" value="1" type="number"/> &nbsp; hour(s) to current time.
            button.btn(onclick="applyManualTime()") Apply
        br
        h2 Major Events
        -let i = 0;
        while i<numberOfEvents
            if i==numberOfMajorEvents
                br
                <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                //- <!-- events1 -->
                <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-3541192882647315" data-ad-slot="6914061743" data-ad-format="auto" data-full-width-responsive="true"></ins>
                <script> (adsbygoogle = window.adsbygoogle || []).push({}); </script>
                br
                h2 Minor Events
            .row(id="event"+i).mb-1.mt-1
                //-first row for PC, mobile
                .col-md-2.col-2: img.events(width="50" height="50")
                .col-md-5.col-10: h3.name=(i==0 ? "Loading" : "")
                //-second row for mobile
                .offset-md-0.offset-2
                .col-md-5.col-10
                    h3.timeDisplayed
                    p.exactDateTime

            -i++;